<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0041C4"
    tools:context=".VoteResultFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voting Result"
        android:fontFamily="@font/amaranth_bold"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="590dp">
            <LinearLayout
                android:id="@+id/election_result_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/publishResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publish Result"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="bottom"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="#0041C4"
                    android:layout_margin="10dp"
                    android:background="@drawable/signin_btn_bg"/>
            </LinearLayout>
        </ScrollView>
</LinearLayout>